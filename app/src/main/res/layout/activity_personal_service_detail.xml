    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:text="工作详情"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fanhui2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作地点:"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@+id/editText14"
                app:layout_constraintStart_toStartOf="@+id/textView25"/>


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="联系方式:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@+id/editText5"
                app:layout_constraintStart_toStartOf="@+id/textView6" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginBottom="36dp"
                android:background="#214EF3"
                android:text="接单"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/editText15"
                app:layout_constraintEnd_toEndOf="@+id/editText15"/>

            <EditText
                android:id="@+id/editText8"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:ems="10"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="@+id/editText15"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintBottom_toTopOf="@+id/button3"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="工作内容:"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="@+id/textView24" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="工作时间:"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:layout_constraintStart_toStartOf="@+id/textView24" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="工作类型:"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@+id/textView25"
                app:layout_constraintStart_toStartOf="@+id/textView25"/>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="工作名称:"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <EditText
                android:id="@+id/editText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                app:layout_constraintTop_toTopOf="@+id/textView21"
                app:layout_constraintBottom_toBottomOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="@+id/editText15"
                app:layout_constraintEnd_toEndOf="@+id/editText15"/>

            <EditText
                android:id="@+id/editText10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="水电维修"
                app:layout_constraintTop_toTopOf="@+id/textView24"
                app:layout_constraintBottom_toBottomOf="@+id/textView24"
                app:layout_constraintStart_toStartOf="@+id/editText15"
                app:layout_constraintEnd_toEndOf="@+id/editText15"/>

            <EditText
                android:id="@+id/editText14"
                android:layout_width="wrap_content"
                android:layout_height="124dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="家庭线路老化，需要进行维修"
                app:layout_constraintTop_toTopOf="@+id/textView19"
                app:layout_constraintStart_toStartOf="@+id/editText15"
                app:layout_constraintEnd_toEndOf="@+id/editText15"/>

            <EditText
                android:id="@+id/editText15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="更换家庭灯泡"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="@+id/textView25"
                app:layout_constraintBottom_toBottomOf="@+id/textView25"
                app:layout_constraintStart_toEndOf="@+id/textView25"
                app:layout_constraintEnd_toEndOf="parent"/>



            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="36dp"
                android:layout_height="43dp"
                app:srcCompat="@mipmap/riqi"
                app:layout_constraintTop_toTopOf="@+id/textView21"
                app:layout_constraintBottom_toBottomOf="@+id/textView21"
                app:layout_constraintEnd_toEndOf="@+id/editText7"/>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_navigate_next_black_24dp"
                app:layout_constraintTop_toTopOf="@+id/editText5"
                app:layout_constraintBottom_toBottomOf="@+id/editText5"
                app:layout_constraintEnd_toEndOf="@+id/editText5" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:srcCompat="@drawable/dian"
                app:layout_constraintTop_toTopOf="@+id/editText8"
                app:layout_constraintBottom_toBottomOf="@+id/editText8"
                app:layout_constraintEnd_toEndOf="@+id/editText8"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>